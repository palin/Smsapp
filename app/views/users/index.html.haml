%section
  %ul  
    %li
      = link_to image_tag('/images/users.png', :alt => 'Users'), users_path
      = link_to "Users", users_path
  #content    
    %h2
      History
    %table
      %tr
        %th= sortable "id"
        %th= sortable "name"
        %th= sortable "surname"
        %th= sortable "login"
        %th= sortable "email"
      - @users.each do |u| 
        %tr
          %td= u.id
          %td= u.name
          %td= u.surname
          %td= u.login
          %td= u.email

